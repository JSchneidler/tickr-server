// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum OrderDirection {
  BUY
  SELL
}

enum OrderType {
  MARKET
  LIMIT
  STOP
  TRAILING_STOP
}

enum AdminActionType {
  VIEW_USER_HOLDINGS
  BAN_USER
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String

  deposits Decimal @default(0)
  balance  Decimal @default(0)

  Holdings Holding[]
  Orders   Order[]

  role                 Role          @default(USER)
  AdminActionsTaken    AdminAction[] @relation("ActionsTaken")
  AdminActionsReceived AdminAction[] @relation("ActionsReceived")

  password_hash Bytes
  salt          Bytes
  AccessTokens  AccessToken[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model AccessToken {
  id   Int    @id @default(autoincrement())
  name String

  token_hash Bytes

  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  createdAt DateTime  @default(now())
  revokedAt DateTime?
}

model Holding {
  id     Int     @id @default(autoincrement())
  shares Decimal

  Coin   Coin @relation(fields: [coinId], references: [id])
  coinId Int

  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@unique([userId, coinId])
}

model Order {
  id     Int      @id @default(autoincrement())
  shares Decimal
  price  Decimal?

  filled     Boolean  @default(false)
  sharePrice Decimal?
  totalPrice Decimal?

  direction OrderDirection
  type      OrderType

  Coin   Coin @relation(fields: [coinId], references: [id])
  coinId Int

  User   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model AdminAction {
  id     Int             @id @default(autoincrement())
  action AdminActionType

  User           User @relation("ActionsTaken", fields: [userId], references: [id], onDelete: Cascade)
  userId         Int
  AffectedUser   User @relation("ActionsReceived", fields: [affectedUserId], references: [id], onDelete: Cascade)
  affectedUserId Int

  createdAt DateTime @default(now())
}

model Coin {
  id          Int     @id @default(autoincrement())
  externalId  String  @unique
  // imageUrl    String
  name        String  @unique
  displayName String
  description String?

  Order   Order[]
  Holding Holding[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}
