{
  "extends": "@tsconfig/node22/tsconfig.json",

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "src/",
    "removeComments": true
  }
}
