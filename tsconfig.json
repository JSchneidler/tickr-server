{
  "extends": "@tsconfig/node24/tsconfig.json",

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "src/",
    "removeComments": true
  }
}
